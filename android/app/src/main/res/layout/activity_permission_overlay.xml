<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Top Content Container: Now Centered -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perm_overlay_header"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perm_overlay_title"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"
            android:src="@drawable/overlay_tutorial"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/perm_overlay_desc"
            android:textSize="15sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGrantOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_open_settings"
            android:backgroundTint="@color/primary_blue"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnNextOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_next"
            android:enabled="false"/>
    </LinearLayout>

</LinearLayout>
