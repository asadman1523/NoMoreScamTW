<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Top Content Container: Now Centered -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perm_access_header"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perm_access_title"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/ivTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/accessibility_tutorial"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/perm_access_desc"
            android:textSize="15sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGrantAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_open_settings"
            android:backgroundTint="@color/primary_blue"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnNextAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_continue"
            android:enabled="false"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnDebugSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_debug_skip"
            android:backgroundTint="#9C27B0"
            android:visibility="gone"
            tools:visibility="visible"
            xmlns:tools="http://schemas.android.com/tools"/>
    </LinearLayout>

</LinearLayout>
